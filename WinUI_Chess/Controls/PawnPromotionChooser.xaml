<Window x:Class="CyberFeedForward.WinUI_Chess.Controls.PawnPromotionChooser"
        xmlns:ChessControls="clr-namespace:TrevyBurgess.Games.TrevyChess.ChessGameUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trevy Chess" Icon="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/TrevyChess.ico"
        mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        SizeToContent="WidthAndHeight" Closed="Window_Closed">
    <DockPanel >
        <TextBlock DockPanel.Dock="Top" FontSize="22" TextAlignment="Center" Grid.ColumnSpan="6" Name="Instructions" />

        <Grid DockPanel.Dock="Bottom" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Name="BlackQueen" Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/B_Queen.gif" Grid.Column="0" Visibility="Collapsed" MouseDown="BlackQueen_MouseDown" />
            <Image Name="BlackBishop" Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/B_Bishop.gif" Grid.Column="1" Visibility="Collapsed" MouseDown="BlackBishop_MouseDown" />
            <Image Name="BlackKnight" Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/B_Knight.gif" Grid.Column="2" Visibility="Collapsed" MouseDown="BlackKnight_MouseDown" />
            <Image Name="BlackRook"  Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/B_Rook.gif" Grid.Column="3" Visibility="Collapsed" MouseDown="BlackRook_MouseDown" />

            <Image Name="WhiteQueen" Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/W_Queen.gif" Grid.Column="0" Visibility="Collapsed" MouseDown="WhiteQueen_MouseDown" />
            <Image Name="WhiteBishop" Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/W_Bishop.gif" Grid.Column="1" Visibility="Collapsed" MouseDown="WhiteBishop_MouseDown" />
            <Image Name="WhiteKnight" Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/W_Knight.gif" Grid.Column="2" Visibility="Collapsed" MouseDown="WhiteKnight_MouseDown" />
            <Image Name="WhiteRook"  Width="80" Height="80" Source="/TrevyBurgess.Games.TrevyChess.ChessGameUI;component/Images/ChessPieces/W_Rook.gif" Grid.Column="3" Visibility="Collapsed" MouseDown="WhiteRook_MouseDown" />
        </Grid>
    </DockPanel>
</Window>
